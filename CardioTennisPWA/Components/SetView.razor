@using CardioTennisPWA.Models
@using CardioTennisPWA.Services

@if (currentGameSession != null && currentGameSession.Sets.Count > 0)
{
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Left Sidebar: Set Tabs -->
            <div class="col-2 bg-light border-end p-0">
                <div class="d-flex flex-column h-100">
                    <div class="p-3 border-bottom bg-primary text-white">
                        <h6 class="mb-0">Sets</h6>
                    </div>
                    <div class="flex-grow-1 overflow-auto">
                        @foreach (var set in currentGameSession.Sets)
                        {
                            <button class="btn btn-link text-start w-100 p-3 border-bottom @(selectedSetNumber == set.Number ? "bg-white fw-bold" : "")"
                                    @onclick="() => SelectSet(set.Number)">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-secondary me-2">@set.Number</span>
                                    <span>Set @set.Number</span>
                                </div>
                                <small class="text-muted d-block mt-1">
                                    @set.Matches.Count match@(set.Matches.Count != 1 ? "es" : "")
                                </small>
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Panel: Set Details -->
            <div class="col-10 p-4">
                @if (selectedSet != null)
                {
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3>Set @selectedSet.Number</h3>
                            @if (selectedSet.IsComplete)
                            {
                                <span class="badge bg-success">Complete</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">In Progress</span>
                            }
                        </div>

                        <!-- Matches in this set -->
                        <div class="accordion" id="accordionMatches">
                            @foreach (var match in selectedSet.Matches)
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading-@match.Number">
                                        <button class="accordion-button @(match.Number == selectedSet.Matches.Count ? "" : "collapsed")"
                                                type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#collapse-@match.Number"
                                                aria-expanded="@(match.Number == selectedSet.Matches.Count ? "true" : "false")"
                                                aria-controls="collapse-@match.Number">
                                            <strong>Match @match.Number</strong>
                                            @if (match.IsComplete)
                                            {
                                                <span class="badge bg-success ms-2">? Complete</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning ms-2">In Progress</span>
                                            }
                                        </button>
                                    </h2>
                                    <div id="collapse-@match.Number"
                                         class="accordion-collapse collapse @(match.Number == selectedSet.Matches.Count ? "show" : "")"
                                         aria-labelledby="heading-@match.Number"
                                         data-bs-parent="#accordionMatches">
                                        <div class="accordion-body">
                                            <!-- Courts for this match -->
                                            <div class="row g-3">
                                                @foreach (var court in match.Courts)
                                                {
                                                    <div class="col-12 col-md-6 col-lg-4">
                                                        <div class="card @(court.WinningTeam.HasValue ? "border-success" : "")">
                                                            <div class="card-header bg-light">
                                                                <strong>Court @court.Number</strong>
                                                            </div>
                                                            <div class="card-body">
                                                                <!-- Team A -->
                                                                <div class="mb-3 p-2 @(court.WinningTeam == 1 ? "bg-success bg-opacity-10 border border-success rounded" : "")">
                                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                                        <strong>Team A</strong>
                                                                        @if (court.WinningTeam == 1)
                                                                        {
                                                                            <span class="badge bg-success">Winner</span>
                                                                        }
                                                                    </div>
                                                                    <div class="d-flex flex-wrap gap-1">
                                                                        @foreach (var playerNum in court.TeamA.PlayerNumbers)
                                                                        {
                                                                            <span class="badge bg-primary">Player @playerNum</span>
                                                                        }
                                                                    </div>
                                                                </div>

                                                                <!-- Team B -->
                                                                <div class="p-2 @(court.WinningTeam == 2 ? "bg-success bg-opacity-10 border border-success rounded" : "")">
                                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                                        <strong>Team B</strong>
                                                                        @if (court.WinningTeam == 2)
                                                                        {
                                                                            <span class="badge bg-success">Winner</span>
                                                                        }
                                                                    </div>
                                                                    <div class="d-flex flex-wrap gap-1">
                                                                        @foreach (var playerNum in court.TeamB.PlayerNumbers)
                                                                        {
                                                                            <span class="badge bg-primary">Player @playerNum</span>
                                                                        }
                                                                    </div>
                                                                </div>

                                                                <!-- Record Result Buttons (if match not complete) -->
                                                                @if (!match.IsComplete && court.WinningTeam == null)
                                                                {
                                                                    <div class="mt-3 d-grid gap-2">
                                                                        <button class="btn btn-sm btn-success" @onclick="() => RecordWinner(court.Number, 1)">
                                                                            Team A Wins
                                                                        </button>
                                                                        <button class="btn btn-sm btn-success" @onclick="() => RecordWinner(court.Number, 2)">
                                                                            Team B Wins
                                                                        </button>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>

                                            <!-- Post-Match Actions (if match is complete but set not complete) -->
                                            @if (match.IsComplete && !selectedSet.IsComplete && match.Number == selectedSet.Matches.Count)
                                            {
                                                <div class="alert alert-info mt-3">
                                                    <h6>What's next?</h6>
                                                    <div class="d-grid gap-2 d-md-flex">
                                                        <button class="btn btn-primary" @onclick="ContinueWithCurrentTeams">
                                                            Continue with Current Teams
                                                        </button>
                                                        <button class="btn btn-secondary" disabled>
                                                            Re-assign Teams (New Set)
                                                        </button>
                                                    </div>
                                                    <small class="text-muted d-block mt-2">
                                                        Note: Re-assign Teams functionality will be implemented separately
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Remix Teams Button (first match only, before it starts) -->
                        @if (selectedSet.Number == 1 && selectedSet.Matches.Count == 1 && !selectedSet.Matches[0].IsComplete)
                        {
                            <div class="mt-3">
                                <button class="btn btn-outline-warning" @onclick="RemixTeams">
                                    <span class="me-2">??</span>
                                    Remix Teams
                                </button>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted mt-5">
                        <p>Select a set from the left to view details</p>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center text-muted mt-5">
        <p>No sets to display</p>
    </div>
}
