@using CardioTennisPWA.Models
@using Microsoft.AspNetCore.Components

<div class="modal fade @(IsVisible ? "show d-block" : "")" tabindex="-1" style="@(IsVisible ? "background-color: rgba(0,0,0,0.8);" : "")">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    Session Complete - Final Scores
                </h5>
            </div>
            <div class="modal-body">
                <div class="alert alert-info mb-3">
                    <strong>Note:</strong> This is your final look at the scores. Closing this will return to the home screen.
                </div>
                
                @if (Players != null && Players.Count > 0)
                {
                    <h6 class="text-center mb-3">Total Matches Played: @TotalMatches</h6>
                    
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th class="text-center" style="width: 80px;">Rank</th>
                                <th>Player</th>
                                <th class="text-end" style="width: 100px;">Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var player in Players)
                            {
                                var isTopThree = rank <= 3;
                                var displayRank = rank;
                                
                                <tr class="@(isTopThree ? "table-warning" : "")">
                                    <td class="text-center">
                                        @if (displayRank == 1)
                                        {
                                            <span class="badge bg-warning text-dark fs-5">1st</span>
                                        }
                                        else if (displayRank == 2)
                                        {
                                            <span class="badge bg-secondary fs-5">2nd</span>
                                        }
                                        else if (displayRank == 3)
                                        {
                                            <span class="badge fs-5" style="background-color: #cd7f32; color: white;">3rd</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fs-5">@displayRank</span>
                                        }
                                    </td>
                                    <td><strong class="fs-5">P@(player.Number)</strong></td>
                                    <td class="text-end">
                                        <span class="badge bg-primary fs-5">@player.Score</span>
                                    </td>
                                </tr>
                                
                                rank++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <p>No scores to display.</p>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-lg w-100" @onclick="Close">
                    Close and Return to Home
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    
    [Parameter]
    public List<Player>? Players { get; set; }
    
    [Parameter]
    public int TotalMatches { get; set; }
    
    [Parameter]
    public EventCallback OnClose { get; set; }
    
    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}
