@using CardioTennisPWA.Models
@using Microsoft.AspNetCore.Components

<div class="modal fade @(IsVisible ? "show d-block" : "")" tabindex="-1" style="@(IsVisible ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    Player Scores
                </h5>
                <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
            </div>
            <div class="modal-body p-0">
                @if (Players != null && Players.Count > 0)
                {
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th class="text-center" style="width: 60px;">Rank</th>
                                <th>Player</th>
                                <th class="text-end" style="width: 80px;">Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                            }
                            @foreach (var player in Players)
                            {
                                var isTopThree = rank <= 3;
                                var displayRank = rank;
                                
                                <tr class="@(isTopThree ? "table-warning" : "")">
                                    <td class="text-center">
                                        @if (displayRank == 1)
                                        {
                                            <span class="badge bg-warning text-dark">1st</span>
                                        }
                                        else if (displayRank == 2)
                                        {
                                            <span class="badge bg-secondary">2nd</span>
                                        }
                                        else if (displayRank == 3)
                                        {
                                            <span class="badge" style="background-color: #cd7f32; color: white;">3rd</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@displayRank</span>
                                        }
                                    </td>
                                    <td><strong>P@(player.Number)</strong></td>
                                    <td class="text-end">
                                        <span class="badge bg-primary">@player.Score</span>
                                    </td>
                                </tr>
                                
                                rank++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <p>No scores to display yet.</p>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    
    [Parameter]
    public List<Player>? Players { get; set; }
    
    [Parameter]
    public EventCallback OnClose { get; set; }
    
    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}
