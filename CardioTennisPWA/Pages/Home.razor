@page "/"

<PageTitle>Cardio Tennis</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="text-center mb-4">
        <h1 class="display-3 mb-3">🎾 Cardio Tennis</h1>
        <p class="lead text-muted">Score Tracker</p>
    </div>
    
    <button class="btn btn-primary btn-lg" @onclick="ShowNewSessionModal">
        New Session
    </button>
</div>

<!-- New Session Modal -->
<div class="modal fade @(showSessionSetupModal ? "show d-block" : "")" tabindex="-1" style="@(showSessionSetupModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Session</h5>
                <button type="button" class="btn-close" @onclick="HideSessionSetupModal"></button>
            </div>
            <div class="modal-body">
                <!-- Number of Courts -->
                <div class="mb-3">
                    <label for="numCourts" class="form-label">Number of Courts</label>
                    <select class="form-select form-select-lg" id="numCourts" @bind="numCourts" @bind:after="ValidateForm">
                        @for (int i = 1; i <= 9; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <!-- Number of Players -->
                <div class="mb-3">
                    <label for="numPlayers" class="form-label">Total Players</label>
                    <div class="input-group input-group-lg">
                        <button class="btn btn-outline-secondary" type="button" @onclick="DecrementPlayers" disabled="@(!canDecrementPlayers)">
                            <span aria-hidden="true">−</span>
                        </button>
                        <input type="number" 
                               class="form-control text-center @(validationMessage != null ? "is-invalid" : "")" 
                               id="numPlayers" 
                               @bind="numPlayers" 
                               @bind:after="ValidateForm"
                               min="@minPlayers" 
                               max="@maxPlayers" />
                        <button class="btn btn-outline-secondary" type="button" @onclick="IncrementPlayers" disabled="@(!canIncrementPlayers)">
                            <span aria-hidden="true">+</span>
                        </button>
                    </div>
                    @if (validationMessage != null)
                    {
                        <div class="invalid-feedback d-block">
                            @validationMessage
                        </div>
                    }
                    else
                    {
                        <div class="form-text">
                            @playersPerCourtText
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="HideSessionSetupModal">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="StartGameSession" disabled="@(!isFormValid)">Start Session</button>
            </div>
        </div>
    </div>
</div>

<!-- Player Numbering Instructions Modal -->
<div class="modal fade @(showPlayerNumberingModal ? "show d-block" : "")" tabindex="-1" style="@(showPlayerNumberingModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <span class="me-2">📋</span>
                    Player Numbering
                </h5>
            </div>
            <div class="modal-body">
                <div class="alert alert-info mb-3">
                    <strong>Manual Step:</strong> This happens outside the app
                </div>
                
                <h6 class="mb-3">Instructions for players:</h6>
                <ol class="mb-4">
                    <li class="mb-2">Have all <strong>@numPlayers players</strong> gather together</li>
                    <li class="mb-2">Players count off from <strong>1 to @numPlayers</strong></li>
                    <li class="mb-2">Each player remembers their number</li>
                </ol>

                <div class="alert alert-warning mb-0">
                    <small>
                        <strong>Note:</strong> Players will use these numbers throughout the session.
                        Make sure everyone remembers their number!
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-lg w-100" @onclick="PlayerNumberingComplete">
                    Done - Generate Teams
                </button>
            </div>
        </div>
    </div>
</div>
