@page "/"
@using CardioTennisPWA.Services
@inject ILocalStorageService LocalStorage

<PageTitle>Cardio Tennis</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="text-center mb-4">
        <h1 class="display-3 mb-3">🎾 Cardio Tennis</h1>
        <p class="lead text-muted">Score Tracker</p>
    </div>
    
    <button class="btn btn-primary btn-lg" @onclick="ShowNewSessionModal">
        New Session
    </button>
</div>

<!-- New Session Modal -->
<div class="modal fade @(showModal ? "show d-block" : "")" tabindex="-1" style="@(showModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Session</h5>
                <button type="button" class="btn-close" @onclick="HideModal"></button>
            </div>
            <div class="modal-body">
                <p>Session setup options will go here...</p>
                <p class="text-muted small">Courts, players, etc.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                <button type="button" class="btn btn-primary">Start Session</button>
            </div>
        </div>
    </div>
</div>

@code {
    private bool showModal = false;

    private void ShowNewSessionModal()
    {
        showModal = true;
    }

    private void HideModal()
    {
        showModal = false;
    }
}
