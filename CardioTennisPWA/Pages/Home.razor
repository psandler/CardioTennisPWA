@page "/"

<PageTitle>Cardio Tennis</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="text-center mb-4">
        <h1 class="display-3 mb-3">🎾 Cardio Tennis</h1>
        <p class="lead text-muted">Score Tracker</p>
    </div>
    
    <button class="btn btn-primary btn-lg" @onclick="ShowNewSessionModal">
        New Session
    </button>
</div>

<!-- New Session Modal -->
<div class="modal fade @(showModal ? "show d-block" : "")" tabindex="-1" style="@(showModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Session</h5>
                <button type="button" class="btn-close" @onclick="HideModal"></button>
            </div>
            <div class="modal-body">
                <!-- Number of Courts -->
                <div class="mb-3">
                    <label for="numCourts" class="form-label">Number of Courts</label>
                    <select class="form-select form-select-lg" id="numCourts" @bind="numCourts" @bind:after="ValidateForm">
                        @for (int i = 1; i <= 9; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <!-- Number of Players -->
                <div class="mb-3">
                    <label for="numPlayers" class="form-label">Total Players</label>
                    <div class="input-group input-group-lg">
                        <button class="btn btn-outline-secondary" type="button" @onclick="DecrementPlayers" disabled="@(!canDecrementPlayers)">
                            <span aria-hidden="true">−</span>
                        </button>
                        <input type="number" 
                               class="form-control text-center @(validationMessage != null ? "is-invalid" : "")" 
                               id="numPlayers" 
                               @bind="numPlayers" 
                               @bind:after="ValidateForm"
                               min="@minPlayers" 
                               max="@maxPlayers" />
                        <button class="btn btn-outline-secondary" type="button" @onclick="IncrementPlayers" disabled="@(!canIncrementPlayers)">
                            <span aria-hidden="true">+</span>
                        </button>
                    </div>
                    @if (validationMessage != null)
                    {
                        <div class="invalid-feedback d-block">
                            @validationMessage
                        </div>
                    }
                    else
                    {
                        <div class="form-text">
                            @playersPerCourtText
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="StartSession" disabled="@(!isFormValid)">Start Session</button>
            </div>
        </div>
    </div>
</div>
